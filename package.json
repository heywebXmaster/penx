{
  "name": "penx",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=@penx/db && turbo run dev --filter=web",
    "dev:web": "turbo run dev --filter=@penx/db && turbo run dev --filter=web",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:web": "turbo run build --filter=web...",
    "build:home": "turbo run build --filter=home...",
    "build:docs": "turbo run build --filter=docs...",
    "build:desktop": "turbo run build --filter=desktop...",
    "start": "turbo run start --filter=web...",
    "deploy": "docker-compose -p penx-web -f docker-compose.yaml up --build -d",
    "clean": "git clean -xdf node_modules",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "echo",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@turbo/gen": "^1.13.0",
    "eslint": "^8.57.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "turbo": "^1.13.0"
  },
  "packageManager": "pnpm@8.7.6"
}
